<div  id="dialog">
<h2><%= t("devise.links.sign_in") %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div id="login_screen"><%= f.label :email, t("devise.label.email") %><br />
  <%= f.email_field :email %></div>

  <div id="login_screen"><%= f.label :password, t("devise.label.password") %><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, t("devise.label.remember_me") %></div>
  <% end -%>

  <div id="login_screen"><%= f.submit  t("devise.links.sign_in")%></div>
<% end %>

<%= render :partial => "devise/shared/links" %>
</div>