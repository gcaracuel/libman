<div  id="dialog">
<h2><%= t("devise.links.edit") %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, t("devise.label.email") %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password, t("devise.label.password") %> <i>(leave blank if you don't want to change it)</i><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, t("devise.label.password_confirmation") %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :current_password, t("devise.label.current_password") %> <i>(we need your current password to confirm your changes)</i><br />
  <%= f.password_field :current_password %></div>

  <div><%= f.submit t("devise.links.update") %></div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to t("devise.links.cancel"), registration_path(resource_name), :confirm => t("devise.label.confirm"), :method => :delete %>.</p>

<%= link_to t("devise.links.back"), :back %>
</div>